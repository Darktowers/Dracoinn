body
	background black
::-ms-placeholder
	color #4d07cd	
::-webkit-placeholder
	color #4d07cd	
::-moz-placeholder
	color #4d07cd
	
.back
	height 100%
	position absolute
	width 100%
	.fondo
		-moz-filter blur(15px) 
		-ms-filter blur(15px) 
		-o-filter blur(15px) 
		-webkit-filter blur(15px)
		background-image url("../img/11.jpg")
		background-position center center
		background-repeat no-repeat
		background-size cover
		filter blur(10px)
		height 100%
		
		
	.formu
		background rgba(0,0,0,0.5)
		height 100%
		position absolute
		top 0
		width 100%
		text-align center
		h1
			margin 1.6em 0 1em 0
			font-weight lighter
			color #4d07cd
		
		.registro
		.caja
			border-radius 5px
			height auto
			margin 0 auto
			position relative
			top 30%
			width 350px
			border 1px solid
			text-align center
			background #fff
			box-shadow 6px 7px 20px
			span
				margin-right 0.5em
			a 
				text-decoration none
				text-align right
				display block
				margin 1em 1.5em 1.5em 0
				&:hover
					color #1389ED
			input 
				display inline-block
				border-radius 3px
				padding 0.6em 1.5em
				margin 1em 1.5em 1em 1.5em
				text-align center
				font-size 1.1em
				margin-bottom 1em
				border 0
				border 1px solid #4d07cd
				font-weight normal
				background rgba(204, 204, 204, 0.85)
				transition all 0.8s
				color #4d07cd 
				
				
				&:focus
					-webkit-box-shadow 0 0 14px #1389ed
					box-shadow 0 0 14px #783B8C
					background #fff
					border 1px solid #783B8C
					color #783B8C
				
			input[type=submit], button
				
				border 0
				background none
				border 2px solid #4d07cd
				padding 25px 50px
				width auto
				line-height 0px
				transition all 0.2s ease-in-out 0s
				color #4d07cd
				font-weight bold
			
				&:hover
					background #4d07cd
					border 2px solid transparent
					font-weight bold
					color #fff
			.icon-check
				margin-right 1em		
				
