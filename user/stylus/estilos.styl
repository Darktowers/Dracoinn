@import "../stylus/normalize.styl"
@import "nib"
gris_oscuro = #333333
gris_claro = #818181
morado = #4d07cd
@font-face 
	font-family 'icomoon'
	src url('../fonts/icomoon.eot?sqehjs')
	src url('../fonts/icomoon.eot?#iefixsqehjs') format('embedded-opentype'),
		url('../fonts/icomoon.woff?sqehjs') format('woff'),
		url('../fonts/icomoon.ttf?sqehjs') format('truetype'),
		url('../fonts/icomoon.svg?sqehjs#icomoon') format('svg')
	font-weight normal
	font-style normal


[class^="icon-"], [class*=" icon-"] 
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale


.icon-plus:before 
	content "\e600"

.icon-envelope:before 
	content "\e60a"

.icon-location:before 
	content "\e601"

.icon-user:before 
	content "\e602"

.icon-search:before 
	content "\e603"

.icon-key:before 
	content "\e60b"

.icon-lock:before 
	content "\e604"

.icon-confi:before 
	content "\e606"

.icon-eye:before 
	content "\e607"

.icon-star:before 
	content "\e609"

.icon-check:before 
	content "\e605"

.icon-close:before 
	content "\e608"
body
	background black	
header
	position relative
	background white
figure
	margin 0
	width 40px
	img
		vertical-align top
.wrap
	width 80%
.round
	border-radius 50%
	overflow hidden
.left
	float left
.right
	float right	
.relative
	position relative	
.center-block
	margin 0 auto
.center-text
	text-align center			
.contenedor
	position relative
	padding 0.3em 0
	overflow hidden
.isotipo 
	width 100px
.logo
	img
		width 100%
		height auto
.back
	height 100%
	position absolute
	width 100%
	.fondo
		-moz-filter blur(15px) 
		-ms-filter blur(15px) 
		-o-filter blur(15px) 
		-webkit-filter blur(15px)
		background-image url("../../img/11.jpg")
		background-position center center
		background-repeat no-repeat
		background-size cover
		filter blur(3px)
		height 100%
		
		
	.formu
		background rgba(0,0,0,0.5)
		height 100%
		position absolute
		top 0
		width 100%
		text-align center
.menu_nav
	display none
.addboton
	border-radius 1px 10px 1px 1px
	color white
	background #344B54
	font-size 2em
	margin 0 0 0 0.5em
	transition all 0.2s ease-in-out 0s
	cursor pointer
	padding-bottom: 0.5em;
		 					
.menu_nav
	background #344B54
	position absolute
	right 0
	width 204px
	top -2.6em
	.menu_ul
		list-style: none
		margin: 0
		padding: 0
		
		.item
			display: block
			margin:0
			a 
				color white
				display block
				padding 0.5em
				text-decoration: none
				transition:0.3s	

				&:hover
					background morado
.menu2_nav
	background #344B54
	position absolute
	left 0
	width 204px
	
	.menu2_ul
		list-style: none
		margin: 0
		padding: 0
		
		
		.menu2-item
			display: block
			margin:0
			
			.active
				background morado
				&:after
					content ""
					display:block;
					right -36px
					
					top 0
					border-color:transparent transparent transparent morado;
					border-style:solid;
					border-width:18.9px;
					position absolute
					 
			a
				color white
				display block
				padding 0.5em
				text-decoration: none
				transition:0.3s	
				&:hover
					background morado
								




	

		
.username
	color #818181
	position relative
	top 9px
	margin-left .5em
.confi-icon
	color gris_claro
	font-size 2em
	margin 0 0 0 0.5em
	transition all 0.2s ease-in-out 0s
	cursor pointer
.scale
	transform:scale(1.1,1.1);	
		
		
	  
.eye-icon
	color gris_claro
	font-size 1.5em
	margin 0 0.5em 0 0
	padding 0.3em 0 0 0
	 	
.user 
	position absolute
	right 0
	bottom 0
	margin 0 0 1.3em 0.5em
	
	
.contenido
	height 1000px
	background white
	margin-top 1em			