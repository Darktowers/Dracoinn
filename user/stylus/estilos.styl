@import "../stylus/normalize.styl"
@import "nib"
gris_oscuro = #333333
gris_claro = #818181
morado = #4d07cd
@font-face 
	font-family 'icomoon'
	src url('../fonts/icomoon.eot?sqehjs')
	src url('../fonts/icomoon.eot?#iefixsqehjs') format('embedded-opentype'),
		url('../fonts/icomoon.woff?sqehjs') format('woff'),
		url('../fonts/icomoon.ttf?sqehjs') format('truetype'),
		url('../fonts/icomoon.svg?sqehjs#icomoon') format('svg')
	font-weight normal
	font-style normal


[class^="icon-"], [class*=" icon-"] 
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
h1 
h2
	color morado	

.contenidos
	span
		position: absolute;
		margin: 13px 0 0 10px;
textarea
	display inline-block
	border-radius 3px
	padding 0.6em 1.5em
	margin 1em 1.5em 1em 1.5em
	text-align justify
	font-size 1.1em
	margin-bottom 1em
	border 0
	border 1px solid #4d07cd
	font-weight normal
	background rgba(204, 204, 204, 0.85)
	transition all 0.8s
	color #4d07cd
	resize: none;
	width 400px		
.contenedornotificaciones
	display none
	background: none repeat scroll 0% 0% #344b54;
	position: absolute;
	right: 148px;
	width: 215px;
	top: -48px;
	z-index: 2;
	max-height: 168px;
	overflow-y: scroll;
	nav
		
		margin: 0
		padding: 0
		
		ul
			display: block
			margin:0
			list-style: none
			padding 0
			a 
				color white
				display block
				padding 0.5em
				text-decoration: none
				transition:0.3s	

				&:hover
					background morado		
input 
	display inline-block
	border-radius 3px
	padding 0.6em 1.5em
	margin-bottom 1em
	text-align center
	font-size 1.1em
	margin-bottom 1em
	border 0
	border 1px solid #4d07cd
	font-weight normal
	background rgba(204, 204, 204, 0.85)
	transition all 0.8s
	color #4d07cd 
	
	
	&:focus
		-webkit-box-shadow 0 0 14px #1389ed
		box-shadow 0 0 14px #783B8C
		background #fff
		border 1px solid #783B8C
		color #783B8C
		
input[type=submit], button
				
	border 0
	background none
	border 2px solid #4d07cd
	padding 25px 43px
	width auto
	line-height 0px
	transition all 0.2s ease-in-out 0s
	color #4d07cd
	font-weight bold
	

	&:hover
		background #4d07cd
		border 2px solid transparent
		font-weight bold
		color #fff		

.inactive
	display inline-block;
	position absolute
	background rgba(76, 69, 69, 0.86)
	z-index 103
	width 150px
	height 200px
	top: 0;
	right: 0;

.icon-plus:before 
	content "\e600"

.icon-envelope:before 
	content "\e60a"

.icon-location:before 
	content "\e601"

.icon-user:before 
	content "\e602"

.icon-search:before 
	content "\e603"

.icon-key:before 
	content "\e60b"

.icon-lock:before 
	content "\e604"

.icon-confi:before 
	content "\e606"

.icon-eye:before 
	content "\e607"

.icon-star:before 
	content "\e609"

.icon-check:before 
	content "\e605"

.icon-close:before 
	content "\e608"
.busque
	list-style none
	width: 59%;
	border: 1px solid;
	margin: 0 auto;
	text-align: left;
.resultados
	background white
		
body
	background black	
header
	position relative
	
.contador
	padding .5em .8em .5em .8em
	position relative
	top 11px
.wrap
	width 80%
	background white
.round
	border-radius 50%
	overflow hidden
	border 1px solid #4d07cd
.left
	float left
.right
	float right	
.relative
	position relative	
.center-block
	margin 0 auto
.center-text
	text-align center			
.contenedor
	position relative
	padding .3em 1.4em
	overflow hidden
figure
	margin 0
	width 40px
	img
		vertical-align top
.isotipo 
	width 100px
.logo
	img
		width 100%
		height auto
.back
	height 100%
	position absolute
	width 100%
	.fondo
		-moz-filter blur(15px) 
		-ms-filter blur(15px) 
		-o-filter blur(15px) 
		-webkit-filter blur(15px)
		background-image url("../../img/11.jpg")
		background-position center center
		background-repeat no-repeat
		background-size cover
